<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.world_resources_app.forum.WritePost">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/text_view_top_headlines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:fontFamily="sans-serif-light"
        android:text="Write post"
        android:textColor="@color/design_default_color_primary"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:text="Write post" />

    <Button
      android:layout_marginHorizontal="280dp"
      android:layout_marginTop="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Cancel"
      android:id="@+id/cancel_button"
    />

    <EditText
        android:id="@+id/editPost"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/cancel_button"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edittext_design"
        android:hint="Write something..."
        android:padding="8dp"

        android:textSize="16sp" />

    <Button
        android:layout_marginHorizontal="280dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
        android:layout_below="@id/editPost"
        android:layout_marginTop="15dp"
      android:text="Post"
      android:id="@+id/sendpost_button"
    />

  </RelativeLayout>



</androidx.cardview.widget.CardView>